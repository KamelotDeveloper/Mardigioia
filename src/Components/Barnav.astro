<nav class="sticky top-0 z-40 w-full flex-none bg-black">
    <div class="max-w-8xl mx-auto">
      <div class="py-4">
        <div class="relative flex items-center">
          <a class="mr-3 flex-none w-[2.0625rem] overflow-hidden md:w-auto" href="/">Logo</a>
          <div class="relative hidden lg:flex items-center ml-auto">
            <nav class="text-md font-semibold italic">
              <ul class="flex space-x-10">
                <li><a class="text-gray-200" href="/">Home</a></li>
                <li><a class="text-gray-200" href="/Galeria">Galeria</a></li>
                <li><a class="text-gray-200" href="/Videos">Videos</a></li>
                <li><a class="text-gray-200" href="/Servicios">Servicios</a></li>
                <li><a class="text-gray-200 mr-20" href="/Contactenos">Contactenos</a></li>
              </ul>
            </nav>
          </div>
          <div class="flex lg:hidden ml-auto">
            <button id="menu-toggle" class="block focus:outline-none z-50 mr-8">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div id="menu" class="fixed inset-y-0 left-0 z-40 w-3/4 bg-black text-white transform -translate-x-full transition-transform lg:hidden">
      <div class="pt-20 px-8">
        <nav class="text-md font-semibold italic">
          <ul class="space-y-4">
            <li><a href="/">Home</a></li>
            <li><a href="/Galeria">Galeria</a></li>
            <li><a href="/Videos">Videos</a></li>
            <li><a href="/Servicios">Servicios</a></li>
            <li><a href="/Contactenos">Contactenos</a></li>
          </ul>
        </nav>
      </div>
    </div>
    <div id="menu-overlay" class="fixed inset-0 z-30 bg-black opacity-50 hidden lg:hidden"></div>
  </nav>
  
  <script>
    document.getElementById('menu-toggle').addEventListener('click', function() {
      var menu = document.getElementById('menu');
      var overlay = document.getElementById('menu-overlay');
      var isOpen = menu.classList.contains('translate-x-0');
      menu.classList.toggle('translate-x-0', !isOpen);
      menu.classList.toggle('-translate-x-full', isOpen);
      overlay.classList.toggle('hidden', isOpen);
    });
  
    document.getElementById('menu-overlay').addEventListener('click', function() {
      var menu = document.getElementById('menu');
      var overlay = document.getElementById('menu-overlay');
      menu.classList.add('-translate-x-full');
      menu.classList.remove('translate-x-0');
      overlay.classList.add('hidden');
    });
  </script>
  